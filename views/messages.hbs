    <script>
    let csrf = document.querySelector('#_csrf').value

    async function addToggleCheck(){
        Array.from(document.querySelectorAll(".check-member")).map(el =>  {
            return el.addEventListener("change", () => {
                el.classList.toggle("checked")
                getLenghtCheckedMemebers()
            })
        })
        getLenghtCheckedMemebers()
    }

    addToggleCheck()

    document.querySelector("#check-memeber-header").addEventListener("click", () => checkAll() )
    
    async function checkAll(){
        let checkboxHeader = document.querySelector("#check-memeber-header") 

        if (checkboxHeader.checked) {
            let checked = Array.from(document.querySelectorAll(".check-member"))
            checked.map(el => {
                el.checked = true
                el.classList.add("checked")
                })
            console.log(`selectionn√© ${checked.length}`)
        }else {
            Array.from(document.querySelectorAll(".check-member")).map(el => {
                el.checked = false
                el.classList.remove("checked")
                })
            console.log("selectionn√© 0")
        }
        getLenghtCheckedMemebers()
    }
    async function changeSubmitBtnState(status, msg){
        let loader_svg = document.querySelector("#loader-svg")
        let sendBtn = document.querySelector(".sendBtn")
        if (status === "send"){
            sendBtn.setAttribute("disabled", "disabled")
            loader_svg ? loader_svg.style.display = "inherit" : ""

        }else {
            sendBtn.removeAttribute('disabled')
            loader_svg ? loader_svg.style.display = "none" : ""
        }
        sendBtn.innerText = msg
    }

    async function getUsernames (){
        let memebers_checkbox = Array.from(document.querySelectorAll("#members-table .check-member")).filter(el => el.classList.contains("checked"))
        let memebers_tr = memebers_checkbox.map(el => el.parentElement.parentElement)
        let usernames = Array.from(memebers_tr).map(el => el.querySelector(".member-username").innerText)
        return usernames;
    }

    async function envoiMessage(){

        let usernames = await getUsernames()
       
        let message = document.querySelector(".message-memeber").value

        if (message.trim().length === 0 || usernames.length === 0) return sweetAlertPopOut("error", "champs de message vide ou membre non selectionn√©" )
        for (let i=0;i< usernames.length;i++){
            await changeSubmitBtnState("send", "Envoie en cours ...")
            try{
                const headers = {
                    'Content-Type': 'application/json',
                }
                const data = {
                    username: usernames[i],
                    message: message,
                }
                axios.defaults.headers.common['X-CSRF-TOKEN'] = csrf;
                let response = await axios.post('/messages', data, {
                    headers : headers
                })
                await sweetAlertPopOut(response.data.status, response.data.message)
            }catch(err){
                console.log("erreur : ", err.response.data)
                await sweetAlertPopOut(err.response.data.status, err.response.data.message )
            }      
            await new Promise((resolve) => setTimeout(resolve, 1000));
        }
        await changeSubmitBtnState("orgine", "Envoyer")        
    }

    async function getMembersByGroup(){
        let group_selected = document.querySelector("#group-select").value
        $.post('getMembersByGroup',
            {
                _csrf: csrf,
                group_selected: group_selected,
            }, 
            function(data) {
                let members_table = document.querySelector("#members-table") 
                members_table.remove()

                let table_responsive = document.querySelector(".table-responsive")

                let groups = data.groupe
                let members = data.members


                let html = `
                <table id="members-table" class="table align-items-center table-flush">
                        <tr>
                            <th><input  id="check-memeber-header" type="checkbox"></th>
                            <th scope="col">User ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Name</th>
                            <th scope="col">Group</th>
                        </tr>
                    </thead>
                    <tbody id="members_table_body">`    
                let html_tr = members.map(el => {
                    let html = 
                        `<tr>
                            <th><input class="check-member" type="checkbox"></th>
                            <th scope="row">
                                ${el.member_id == null ? "N/A" : el.member_id}
                            </th>
                            <td class="member-username">
                                ${el.username == null ? "N/A" : el.username}
                            </td>
                            <td>
                                ${el.name == null ? "N/A" : el.name}
                            </td>
                            <td>
                                ${groups.filter(group => group.id == el.group_id )[0].name}
                            </td>
                        </tr>` 
                    return html
                })
                html_tr = html_tr.join("")
                html += html_tr + `</tbody></table></div>`                       
                table_responsive.innerHTML += html
                document.querySelector("#check-memeber-header").addEventListener("click", () => checkAll() )
                addToggleCheck()
                getLenghtCheckedMemebers()
            }
        )
    }

    async function getLenghtCheckedMemebers(){
        document.querySelector("#number-selected").innerText = document.querySelectorAll(".checked").length
    }
</script>