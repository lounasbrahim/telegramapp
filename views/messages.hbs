<script>
    let checkboxHeader = document.querySelector("#check-memeber-header") 
    checkboxHeader.addEventListener("click", () => {
        if (checkboxHeader.checked) {
            let checkboxMembers = document.querySelectorAll(".check-member")
            Array.from(checkboxMembers).map(el => {
                el.checked = true
                el.classList.add("checked")
                })
        }else {
            let checkboxMembers = document.querySelectorAll(".check-member")
            Array.from(checkboxMembers).map(el => {
                el.checked = false
                el.classList.remove("checked")
                })
        }
    })

    let check_members = document.querySelectorAll(".check-member")
    Array.from(check_members).map(el =>  {
         return el.addEventListener("change", () => {
              el.classList.toggle("checked")  
            })
        })

    async function envoiMessage(){
        let memebers_checkbox = Array.from(document.querySelectorAll("#members-table .check-member")).filter(el => el.classList.contains("checked"))
        let memebers_tr = memebers_checkbox.map(el => el.parentElement.parentElement)
        let usernames = Array.from(memebers_tr).map(el => el.querySelector(".member-username").innerText)
        let message = document.querySelector(".message-memeber").value
        let csrf = document.querySelector('#_csrf').value

        if (message.trim().length != 0 && usernames.length != 0){
            for (let i=0;i< usernames.length;i++){
                let request_post = $.post('messages', {
                    _csrf: csrf,
                    username: usernames[i],
                    message: message,
                })
                request_post.done(function (res) { console.log("message envoyé: "res) })
                request_post.fail(function (xhr, status, error) {
                      console.log("message non envoyé: ", error)
                });
            //await new Promise((resolve) => setTimeout(resolve, 3000));
            }
        }
    }
</script>