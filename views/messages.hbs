                                            <th scope="col">Username</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Group</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#if groups.length}}
                                        {{#each members}}
                                        <tr>
                                            <th><input class="check-member"
                                                    type="checkbox"></th>
                                            <th scope="row">
                                                {{ this.member_id }}
                                            </th>
                                            <td class="member-username">
                                                {{ this.username }}
                                            </td>
                                            <td>
